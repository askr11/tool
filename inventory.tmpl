
[bastion]
%{ for ip in bastion_hosts ~}
${ip}
%{ endfor ~}

[ubuntu_nodes]
%{ for index, ip in ubuntu_hosts ~}
ubuntu_node${index} ansible_host=${ip} ansible_ssh_common_args='-o ProxyJump=${bastion_user}@${bastion_hosts[index]} -W %h:%p'
%{ endfor ~}


[all:vars]
ansible_ssh_private_key_file=/var/lib/jenkins/workspace/tool/keyins.pem
ansible_user=ubuntu
bastion_user=ubuntu

